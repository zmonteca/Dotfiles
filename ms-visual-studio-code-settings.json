// Microsoft Visual Studio Code - User Preferences - settings.json
{
    // annoying UI feature
    "explorer.confirmDragAndDrop": false,

    // removes all trailing whitespace from files
    "files.trimTrailingWhitespace": true,

    // removes all trailing lines from EOF
    "files.trimFinalNewlines": true,

    // adds one trailing line to EOF
    "files.insertFinalNewline": true,

    // The number of spaces a tab is equal to. This setting is overridden
    // based on the file contents when `editor.detectIndentation` is true.
    "editor.tabSize": 4,

    // Insert spaces when pressing Tab. This setting is overriden
    // based on the file contents when `editor.detectIndentation` is true.
    "editor.insertSpaces": true,

    // When opening a file, `editor.tabSize` and `editor.insertSpaces`
    // will be detected based on the file contents. Set to false to keep
    // the values you've explicitly set, above.
    "editor.detectIndentation": false,

    // We want this false because a lot of php partials have open tags
    "editor.matchBrackets": false,

    // file specific spacing settings
    "[css]": {
        "editor.tabSize": 2
    },
    "[scss]": {
        "editor.tabSize": 2
    },
    "[html]": {
        "editor.tabSize": 4
    },
    "[php]": {
        "editor.tabSize": 4
    },
    "[javascript]": {
        "editor.tabSize": 4
    },

    // format html
    "php-cs-fixer.formatHtml": true,

    // fix semi colons
    "php-cs-fixer.autoFixBySemicolon": true,

    // format php & html on save
    "php-cs-fixer.onsave": true,

    // php cs path
    "php-cs-fixer.executablePath": "${extensionPath}/php-cs-fixer.phar",

    // diff editor settings
    "diffEditor.renderSideBySide": false,

    // markdown settings
    "markdown.extension.toc.githubCompatibility": true,
    "markdown.extension.preview.autoShowPreviewToSide": true
 }
